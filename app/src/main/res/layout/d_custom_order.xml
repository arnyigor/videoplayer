<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/rgrSort"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/rbNone"
            style="@style/DetailsSubTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_none" />

        <RadioButton
            android:id="@+id/rbTitle"
            style="@style/DetailsSubTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_title" />

        <RadioButton
            android:id="@+id/rbYearDesc"
            style="@style/DetailsSubTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_year_desc" />

        <RadioButton
            android:id="@+id/rbYearAsc"
            style="@style/DetailsSubTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_year_asc" />

    </RadioGroup>
</LinearLayout>