<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.arny.homecinema.presentation.home.HomeFragment"
        android:label="f_home"
        tools:layout="@layout/f_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.arny.homecinema.presentation.details.DetailsFragment"
        android:label="details_fragment"
        tools:layout="@layout/f_details" >
        <argument
            android:name="movie"
            app:argType="com.arny.homecinema.di.models.Movie" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.arny.homecinema.presentation.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.arny.homecinema.presentation.history.HistoryFragment"
        android:label="f_history"
        tools:layout="@layout/f_history" >
        <action
            android:id="@+id/action_historyFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
</navigation>