<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HomeCardTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="HomeCardSubTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="DetailsTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">8sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailsSubTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="PlayButton">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/bg_btn_play</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="SerialSpinnerStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/bg_stroke</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

</resources>