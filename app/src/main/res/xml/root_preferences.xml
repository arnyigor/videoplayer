<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/pref_player">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/pref_key_pip_mode"
            android:summary="@string/pref_summary_pip_mode"
            android:title="@string/pref_title_pip_mode"/>

        <EditTextPreference
            android:defaultValue="1000"
            android:dialogLayout="@layout/preference_edit_text"
            android:dialogTitle="Введите максимальное усиление звука(100-100000)"
            android:key="@string/pref_max_boost_size"
            android:summary="Установить максимальное усиление звука в процентах(100-100000)"
            android:title="Усиление звука" />

    </PreferenceCategory>
    <PreferenceCategory app:title="@string/pref_common">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_key_update_periodic"
            android:summary="@string/pref_summary_update_periodic"
            android:title="@string/pref_title_update_periodic"/>

        <EditTextPreference
            android:defaultValue="22"
            android:dialogLayout="@layout/preference_edit_text"
            android:dialogTitle="@string/pref_title_update_periodic_hours_dialog_title"
            android:key="@string/pref_key_update_periodic_hour_start"
            android:summary="@string/pref_title_update_periodic_hours_summary"
            android:title="@string/pref_title_update_periodic_hours_title" />

    </PreferenceCategory>
</PreferenceScreen>